[Unit]
Description=SteamOS kdump loader boot-time service

[Service]
Type=oneshot
StandardOutput=journal
ExecStartPre=/usr/lib/kdump/kdump-load.sh
ExecStart=/usr/lib/kdump/save-dumps.sh
RemainAfterExit=yes

[Install]
WantedBy=basic.target
