post_install() {
	# Create the minimal kdump initramfs for the running kernel
	/usr/lib/kdump/kdump_load.sh initrd
}

pre_remove() {
	# Delete all minimal initramfs images created for kdump
	/usr/lib/kdump/kdump_load.sh clear
}
